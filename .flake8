# .flake8
[flake8]
max-line-length = 88
select = E,W,F
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # imported but unused (handled by isort/mypy)
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    .mypy_cache,
    .pytest_cache,
    migrations
max-complexity = 10
per-file-ignores =
    # Tests can have longer lines and unused imports
    tests/*:E501,F401
    # Init files may have unused imports
    __init__.py:F401